		$File	"src\offsets.cpp"
		$File	"src\vfuncs.cpp"
	}
	
	$Folder	"Header Files"
	{
		$File	"src\advspec.h"
		$File	"src\ifaces.h"
		$File	"src\offsets.h"
		$File	"src\vfuncs.h"
	}
	
	$Folder	"Link Libraries"
	{
		$Lib tier1
	}
}
